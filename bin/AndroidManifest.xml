<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soboapps.namecaller"
    android:versionCode="5"
    android:versionName="3.3" >

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="18" />
    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" android:logo="@drawable/splash">

        <activity
            android:name=".NameCallerActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>  
        <activity
            android:name=".myMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.soboapps.namecaller.MYMENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>  
        <activity
            android:name=".MWordList"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.soboapps.namecaller.MWORDLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>                          
        <activity
            android:name=".LWordList"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.soboapps.namecaller.LWORDLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                <activity
            android:name=".about"
            android:label="@string/stAbout_nc"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.soboapps.namecaller.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	                    
        </application>

</manifest>